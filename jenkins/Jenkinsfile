pipeline {
    agent {
        docker {
            image 'maven:3.8.5-openjdk-17-slim'
            args '-v /root/.m2:/root/.m2'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn -B -DskipTests clean package'
                sh 'cd ./test javac -cp "junit-platform-console-standalone-1.7.0-all.jar" LoginTest.java'
            }
        }
        stage('Metrics - Lines of Code') {
        steps {
                sh 'cat ./src/main/java/core/bin/metrics/LOC.txt'           
            }
        }
        stage('Metrics - Complexity') {
        steps {
                sh 'cat ./src/main/java/core/bin/metrics/COMPLEXITY.txt'           
            }
        }
                stage('Metrics - Chidamber & Kemerer') {
        steps {
                sh 'cat ./src/main/java/core/bin/metrics/CHIDAMBER-KEMERER.txt'           
            }
        }
        stage('Test') {
            steps {
                 sh 'cd ./test; java -jar junit-platform-console-standalone-1.7.0-all.jar -cp "." --select-class LoginTest --reports-dir="surefire-reports"'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Deliver') {
            steps {
                echo 'Does Not Yet Exist'
            }
        }
    }
}
